<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
           xmlns:camelcxf="http://camel.apache.org/schema/blueprint/cxf"
           xsi:schemaLocation="
           http://www.osgi.org/xmlns/blueprint/v1.0.0
           http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <!-- osgi blueprint property placeholder -->
  <cm:property-placeholder id="placeholder" persistent-id="rider.auto.ws.config">
    <cm:default-properties>
      <cm:property name="httpAddress" value="http://localhost:8182/cxf/order" />
    </cm:default-properties>
  </cm:property-placeholder>

  <camelcxf:cxfEndpoint id="orderEndpoint"
                   address="${httpAddress}"
                   serviceClass="org.fusesource.camel.ws.OrderEndpoint"/>

  <camelContext id="rider-auto-ws" trace="false" xmlns="http://camel.apache.org/schema/blueprint">
    <route id="ws-to-jms">
      <from uri="cxf:bean:orderEndpoint" />  
      <setBody>
        <simple>${in.body[0]}</simple>
      </setBody>   
      <inOnly uri="activemq:incomingOrders" />
      <transform>
        <constant>OK</constant>
      </transform>
    </route>
  </camelContext>

  <!-- use the fabric protocol in the brokerURL to connect to the ActiveMQ 
    broker registered as default name -->
  <bean id="jmsConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
    <property name="brokerURL" value="discovery:(fabric:default)" />
  </bean>

  <bean id="pooledConnectionFactory" class="org.apache.activemq.pool.PooledConnectionFactory">
    <property name="maxConnections" value="1" />
    <property name="maximumActive" value="500" />
    <property name="connectionFactory" ref="jmsConnectionFactory" />
  </bean>

  <bean id="activemq" class="org.apache.activemq.camel.component.ActiveMQComponent">
    <property name="connectionFactory" ref="pooledConnectionFactory" />
  </bean>

</blueprint>
